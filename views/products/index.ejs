<%- include ../layouts/cabeza.ejs %>
  <link rel="stylesheet" href="/stylesheets/components.css">
  <link rel="stylesheet" href="/stylesheets/products/products.css">
  <%- include ../layouts/cabecera.ejs %>

    <%- include ../layouts/menu-lateral.ejs%>

      <main class="page-content" id="page-content">

        <div class="page-content-container">

          <a href="#" class="button-new  button-open-dialog">
            <span class="button-new-icon">
              <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="currentColor">
                <path d="M11.075 18.8v-5.875H5.2V11.05h5.875V5.175h1.875v5.875h5.875v1.875H12.95V18.8Z" />
              </svg>
            </span>
            <span class="button-new-text">Crear nuevo producto</span>
          </a>

          <form action="#" role="search" class="input-area">
            <div class="input-group  col-12  col-md-6">
              <input type="search" placeholder="Buscar" class="input-search col-12">
              <button type="button" class="button-search">
                <span class="button-search-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="currentColor">
                    <path fill="currentColor"
                      d="M23.354 22.646l-5-5-.012-.007a8.532 8.532 0 10-.703.703l.007.012 5 5a.5.5 0 00.707-.707zM12 19.5a7.5 7.5 0 117.5-7.5 7.508 7.508 0 01-7.5 7.5z">
                    </path>
                  </svg>
                </span>
              </button>
            </div>
            <div class="search-filter">
              <div class="search-filter-container">
                <button class="button-filter  button-selected" type="button" id="btn-todos">
                  <span class="button-text">Todos</span>
                </button>
                <button class="button-filter" type="button" id="btn-codigo">
                  <span class="button-text">CÃ³digo</span>
                </button>
                <button class="button-filter" type="button" id="btn-nombre">
                  <span class="button-text">Nombre</span>
                </button>
                <button class="button-filter" type="button" id="btn-activos">
                  <span class="button-text">Activos</span>
                </button>
                <button class="button-filter" type="button" id="btn-inactivos">
                  <span class="button-text">Inactivos</span>
                </button>
              </div>
            </div>
          </form>

          <h1>Lista de productos</h1>

          <section class="result-area">
            <% for( let index = 0; index < 4; index++ ) { %>
              <article class="card-result  col-12  col-md-6  col-lg-4">
                <div class="group-header">
                  <div class="card-area-photo">
                    <img src="images/add-image.png" alt="">
                  </div>
                  <header class="card-result-header">
                    <h2>Nombre del producto</h2>
                    <p class="card-price-text">$2500</p>
                    <div class="card-result-options">
                      <button class="button">
                        <span>
                          <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="currentColor"><path d="m19.3 8.925-4.25-4.2 1.4-1.4q.575-.575 1.413-.575.837 0 1.412.575l1.4 1.4q.575.575.6 1.388.025.812-.55 1.387ZM17.85 10.4 7.25 21H3v-4.25l10.6-10.6Z"></path></svg>
                        </span>
                      </button>
                      <button class="button button-delete">
                        <span>
                          <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="currentColor"><path d="M7 21q-.825 0-1.412-.587Q5 19.825 5 19V6H4V4h5V3h6v1h5v2h-1v13q0 .825-.587 1.413Q17.825 21 17 21Zm2-4h2V8H9Zm4 0h2V8h-2Z"></path></svg>
                        </span>
                      </button>
                    </div>
                  </header>
                </div>
              </article>
            <% } %>
          </section>

        </div>

      </main>

      <script src="/javascripts/button-selected.js"></script>
      <%- include ../layouts/pie.ejs%>